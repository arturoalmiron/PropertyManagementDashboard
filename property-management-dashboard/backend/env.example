# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/property_management_py"

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Configuration (for future authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Currency API Configuration
CURRENCY_API_KEY=your-api-key-optional
CURRENCY_UPDATE_INTERVAL=3600000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Paraguay Specific
DEFAULT_CURRENCY=PYG
DEFAULT_LANGUAGE=es
DEFAULT_TIMEZONE=America/Asuncion

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 